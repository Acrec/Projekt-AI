@model IEnumerable<Projekt_AI.Models.Menu>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Menu</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Menu_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food_Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rest_ID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Menu_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Food_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Food_Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rest_ID)
        </td>
        <td>  @Html.ActionLink("Dodaj","Dodaj", "ShoppingCart", new  {id=item.Menu_ID,rid=item.Rest_ID },null )  </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Przejdź do wyboru restauracji", "Restaurant", "Restaurant")
</p>
